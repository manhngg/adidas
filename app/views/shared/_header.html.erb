<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <%= link_to admin_signed_in? ? admin_panel_path : root_path, class: "navbar-brand" do %>
      <%= image_tag "symbol_01.png" %>
      <%= image_tag "text_01.png" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li class="nav-item active">
            <a class="nav-link btn btn-sm btn-rounded btn-primary" data-toggle="modal" href="#logoutModal">ログアウト</a>
          </li>
          <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="logoutModalLabel">ログアウト</h5>
                </div>
                <div class="modal-body">
                  <span>ログアウトしてよろしいですか？</span>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">キャンセル</button>
                  <%= link_to "ログアウト", admin_logout_path, method: :delete, class: "btn btn-sm btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
