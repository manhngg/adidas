<% if request.path_info == new_store_path || request.path_info == stores_path || request.path_info == areas_select_stores_path %>
  <%= collection_select :store, :area_id, Area.where(prefecture_id: prefecture_id),
    :id, :name, {}, {include_blank: true, class: "form-control"} %>
<% else %>
  <% p request.path_info %>
  <%= collection_select :store, :area_id, Area.where(prefecture_id: prefecture_id),
    :id, :name, {}, {include_blank: true, class: "form-control", selected: @store.area.id} %>
<% end %>
