<%= form_with model: product, local: true, class: "horizontal-form" do |f| %>
  <%= render 'shared/error_messages', model: product %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :jan_code %>
    <%= f.text_field :jan_code, class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to '戻る', products_path %>
    <% if request.path_info == new_product_path || request.path_info == products_path %>
      <%= f.submit '追加', class: "btn btn-rounded btn-primary" %>
    <% else %>
      <%= f.submit '更新', class: "btn btn-rounded btn-primary" %>
    <% end %>
  </div>
<% end %>
