<!-- Breadcrumb -->
<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to "商品データ管理", products_path %></li>
  <li class="breadcrumb-item active" aria-current="page">インポート</li>
</ol>

<%= render "layouts/flash_import_errors" %>

<%= form_tag({controller: "products", action: "csv_import", method: "post"},
  {class: "horizontal-form", multipart: true}) do%>

  <div class="form-group">
    <%= label_tag "輸入" %>
    <%= file_field_tag :file %>
  </div>

  <div class="actions">
    <%= link_to '戻る', products_path %>
    <%= button_tag type: :submit, class: "btn btn-icon btn-outline-primary" do %>
      <i class="material-icons">present_to_all</i>
      <span>インポート</span>
    <% end %>
  </div>
<% end %>
