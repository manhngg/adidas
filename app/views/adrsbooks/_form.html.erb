<%= form_for adrsbook, html: { class: "horizontal-form" } do |f| %>
  <%= render "shared/error_messages", model: adrsbook %>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category,
      options_for_select(Adrsbook.load_categories), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :furigana %>
    <%= f.text_field :furigana, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :adrsbook_subcategory %>
    <%= f.select :adrsbook_subcategory_id,
      options_for_select(adrsbook_subcategories), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tel1 %>
    <%= f.text_field :tel1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tel2 %>
    <%= f.text_field :tel2, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tel3 %>
    <%= f.text_field :tel3, class: "form-control" %>
  </div>

  <%= f.hidden_field :store_id, value: store_id %>


  <div class="actions">
    <%= link_to '戻る', adrsbooks_path(store_id: store_id) %>
    <% if request.path_info == new_adrsbook_path || request.path_info == adrsbooks_path %>
      <%= f.submit '追加', class: "btn btn-rounded btn-primary" %>
    <% else %>
      <%= f.submit '更新', class: "btn btn-rounded btn-primary" %>
    <% end %>
  </div>
<% end %>
