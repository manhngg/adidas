<!-- Breadcrumb -->
<ol class="breadcrumb">
  <li class="breadcrumb-item active" aria-current="page">管理ユーザー管理</li>
</ol>

<!-- Flash message -->
<%= render "layouts/flash_message" %>

<!-- Top link -->
<section class="top-link">
  <%= link_to '新規追加', new_admin_path %>
  <%= link_to '一括インポート', import_admins_path %>
</section>

<!-- Search form -->
<section class="search-form">
  <%= search_form_for(@q, url: admins_path, html: { method: :get }) do |f| %>
    <div class="form-group">
      <%= f.label 'ユーザーID' %>
      <%= f.text_field :staff_id_cont, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label '名前' %>
      <%= f.text_field :full_name_cont, class: "form-control" %>
    </div>

  <!--
    <div class="form-group">
      <%= f.label '所属' %>
      <%= f.text_field :department_cont, class: "form-control" %>
    </div>
  -->

    <div class="actions">
      <%= button_tag type: :submit, name: nil, class: "btn btn-icon btn-outline-primary" do %>
        <i class="material-icons">search</i>
        検索
      <% end %>
    </div>
  <% end %>
</section>

<!-- Pagination -->
<section class="page-pagination">
  <%= paginate @admins %>
</section>

<!-- Table list -->
<table class="table table-list ">
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>名前</th>
      <th>管理権限</th>
      <th>所属</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.staff_id %> </td>
        <td><%= admin.full_name %> </td>
        <td><%= admin.system_admin ? "システム管理者" : "店舗管理者" %></td>
        <td><%= admin.department %> </td>
        <td><%= link_to '店舗権限設定', store_permissions_set_admin_path(admin) %></td>
        <td><%= link_to '機能権限設定', permissions_set_admin_path(admin) %></td>
        <td class="edit">
          <%= link_to '編集', edit_admin_path(admin),
          class: "btn btn-sm btn-rounded btn-outline-primary" %>
        </td>
        <td class="delete">
          <%= render "shared/modal_destroy", object_name: "#{admin.staff_id} #{admin.full_name}",
            object: admin, path: admin_path(admin) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
